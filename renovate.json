{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["\\.container$"],
            "matchStrings": ["Image=(?<depName>.*?):(?<currentValue>.*)"],
            "versioningTemplate": "docker",
            "datasourceTemplate": "docker"
        }
    ]
}
